document.querySelectorAll('.heading:first-child').forEach(n=>{
   n.innerText = n.parentNode.innerText
})
document.querySelectorAll('.heading').forEach(n=>{
   if(n.previousElementSibling) n.remove()
})
document.querySelectorAll('.d>.content:first-child').forEach(n=>{
   n.innerText = n.parentNode.innerText
})
document.querySelectorAll('.d>.content').forEach(n=>{
   if(n.previousElementSibling) n.remove()
})
document.querySelectorAll('.chapter>.label').forEach(n=>n.remove())
document.querySelectorAll('.verse').forEach(n=>{
    if(!n.nextElementSibling) n.dataset.endline=true
})
document.querySelectorAll('.chapter .verse>.label').forEach(n=>{
   n.parentElement.dataset.label=n.innerText;
   n.remove(); 
})
arr = [];
document.querySelectorAll('.verse,.heading,.d>.content').forEach((n,order)=>{
   if(n.classList.contains('verse')) arr.push({order,...n.dataset,content:n.innerText})
    if(n.classList.contains('heading')) arr.push({order,heading:true,content:n.innerText})
    if(n.classList.contains('content')) arr.push({order,desciption:true,content:n.innerText})
})
document.querySelectorAll('.verse,.heading:first-child,.d>.content:first-child').forEach(n=>n.remove())
JSON.stringify(arr.filter(item=>item.content))
